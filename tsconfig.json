{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"jsx": "react-native",
		"lib": [
			"esnext",
			"dom"
		],
		"moduleResolution": "node",
		"module": "esnext",
		"target": "ES5",
		"declaration": true,
		"outDir": "dist",
		"emitDeclarationOnly": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"baseUrl": "./",
		"paths": {
			"@components/*": [
				"./src/components/*"
			],
			"@components": [
				"./src/components"
			],
			"@utils": [
				"./src/utils"
			],
			"@utils/*": [
				"./src/utils/*"
			],
			"@hooks": [
				"./src/hooks"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@constants": [
				"./src/constants"
			],
			"@assets/*": [
				"./src/assets/*"
			],
			"@pages/*": [
				"./src/pages/*"
			],
			"@core/*": [
				"./src/core/*"
			],
			"@core": [
				"./src/core"
			],
			"@store/*": [
				"./src/store/*"
			],
			"@store": [
				"./src/store"
			],
			"@type": [
				"./src/type"
			],
			"@root": [
				"./src"
			],
			"@root/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"src/**/*"
, "stories/components/View/index.stories.tsx", "stories/components/Text/index.stories.tsx", "stories/components/Image/index.stories.tsx"	],
	"exclude": [
		"node_modules"
	]
}